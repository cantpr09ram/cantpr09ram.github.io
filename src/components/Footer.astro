---
import { NAME, GITHUB, EMAIL } from "../consts"
const today = new Date();
---

<footer class="text-sm py-10 pl-2">
    <div class="flex gap-4 mt-4">
		<a 
			href={`https://github.com/${GITHUB}`}
			target="_blank" 
			class="text-white hover:text-gray-400 hover:underline"
			rel="noopener noreferrer"
		>
			<p>GitHub</p>
		</a>
		<a 
			href={`mailto:${EMAIL}`}
			target="_blank" 
			class="text-white hover:text-gray-400 hover:underline"
			rel="noopener noreferrer"
		>
			<p>Email</p>
		</a>
		<a 
			href="/rss.xml" 
			target="_blank" 
			class="text-white hover:text-gray-400 hover:underline"
			rel="noopener noreferrer"
		>
			<p>RSS</p>
		</a>
	</div>
	<p class="pt-2 text-[10px]">&copy; 2022-{today.getFullYear()} {NAME}. Content lincensed unless otherwise stated.</p>
</footer>
